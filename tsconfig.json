{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false
  },
  "include": [
    "./src",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
